<odoo>
    <data>
        <template id="line_no" inherit_id="sale.report_saleorder_document">
            <xpath expr="//th[1]" position="before">
                <th xid="line_no">No</th>
            </xpath>
            <xpath expr="//span[@t-field='l.name']/../../td[1]" position="before">
                    <td>
                       <span t-field="l.line_no"/>
                    </td>
            </xpath>
        </template>
    </data>
</odoo>
